<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docente.SezioneDiagnosticaFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Test livello 1"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Test livello 2"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Test livello 3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lintext"
        android:layout_marginTop="10dp">

        <ListView
            android:id="@+id/listaTestLv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </FrameLayout>

        <ListView
            android:id="@+id/listaTestLv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </FrameLayout>

        <ListView
            android:id="@+id/listaTestLv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>
    </LinearLayout>
</RelativeLayout>

</FrameLayout>
