<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_marginTop="@dimen/minimoMarginetop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2">
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/infoAlunno"
                        android:layout_marginLeft="@dimen/minimoMarginetop"
                        android:textStyle="bold|italic" />
                    <FrameLayout></FrameLayout>
                    <ImageButton
                        android:id="@+id/btModificaDati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/modifica"
                        android:background="#00000000"
                        android:layout_gravity="bottom|end"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nome"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cognome"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dataNascita"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/nomeAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/cognomeAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/dataNascitaAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cf"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/luogoNascita"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/residenza"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/codiceFiscaleAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/luogoNascitaAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/residenzaAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>


                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telefono"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Cellulare"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/telefonoAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/celAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/emailAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opzDsa"
                        android:layout_marginLeft="@dimen/minimoMarginetop"
                        android:layout_marginTop="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <CheckBox
                        android:id="@+id/opzDsaAlunno"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minimoMarginetop"/>

                </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|end">
                    <Button
                        android:id="@+id/btAnnullaDati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annulla"
                        android:visibility="invisible"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/btConfermaModificaDati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conferma"
                        android:visibility="invisible"
                        android:textAllCaps="false"
                        />
                </LinearLayout>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/infoAccesso"
                        android:layout_marginLeft="@dimen/minimoMarginetop"
                        android:textStyle="bold|italic"/>
                    <FrameLayout></FrameLayout>
                    <ImageButton
                        android:id="@+id/btModificaCredenziali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/modifica"
                        android:background="#00000000"
                        android:layout_gravity="bottom|end"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pswAlunno"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>
                    <TextView
                        android:id="@+id/txtConfPsw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confermaPsw"
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/marginetop"
                        android:layout_marginTop="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/usernameAlunno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/passwordAlunno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginLeft="@dimen/marginetop"/>

                    <EditText
                        android:id="@+id/confPasswordAlunno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/marginetop"/>

                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|end">
                    <Button
                        android:id="@+id/btAnnullaCred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annulla"
                        android:visibility="invisible"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/btConfermaModificaCred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conferma"
                        android:visibility="invisible"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/infoClasse"
                        android:layout_marginLeft="@dimen/minimoMarginetop"
                        android:textStyle="bold|italic"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/classe"
                        android:layout_marginLeft="@dimen/marginetop"/>
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/classeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginLeft="@dimen/marginetop"/>
                </TableRow>

            </TableLayout>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoAndamento"
                android:layout_marginLeft="@dimen/minimoMarginetop"
                android:textStyle="bold|italic"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
