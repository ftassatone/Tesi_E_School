<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_marginTop="@dimen/marginetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoGenerali"
                android:layout_marginLeft="@dimen/marginetop"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cognome"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataNascita"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/nomeDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/cognomeDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/dataNascitaDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:inputType="date"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginRight="@dimen/marginetop"/>



        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luogoNascita"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/residenza"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:id="@+id/txtCf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cf"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/luogoNascitaDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/residenzaDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/cfDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLength="@integer/lunghezzaCf"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginRight="@dimen/marginetop"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cellulare"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/telefonoDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:inputType="number"
                android:maxLines="@integer/numeroRighe"
                android:maxLength="@integer/lunghezzaNumero"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/cellulareDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:inputType="number"
                android:maxLines="@integer/numeroRighe"
                android:maxLength="@integer/lunghezzaNumero"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/emailDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoDocenza"
                android:layout_marginLeft="@dimen/marginetop"
                android:textStyle="bold|italic"/>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:id="@+id/linearMaterie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/marginetop">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearClassi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/marginetop">
            </LinearLayout>

            <!--Button
                android:id="@+id/btSelezionaMaterie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleziona materie"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/marginetop"/>

            <Button
                android:id="@+id/btSelezionaClassi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleziona classi"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/marginetop"/-->

        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_marginTop="@dimen/marginetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoAccesso"
                android:layout_marginLeft="@dimen/marginetop"
                android:textStyle="bold|italic"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/matricola"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passwordTxt"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confermaPsw"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/matricolaDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/pswDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"/>

            <EditText
                android:id="@+id/confermaPswDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inserisci"
                android:maxLines="@integer/numeroRighe"
                android:layout_marginLeft="@dimen/margineBordi"
                android:layout_marginRight="@dimen/marginetop"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtErrore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/erroreCampiVuoti"
        android:layout_marginTop="@dimen/marginetop"
        android:layout_marginLeft="@dimen/marginetop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infoMatricola"
        android:layout_marginTop="@dimen/marginetop"
        android:layout_marginLeft="@dimen/marginetop"/>

    <Button
        android:id="@+id/btConfermaRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conferma"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/marginetop"/>

</LinearLayout>
</ScrollView>