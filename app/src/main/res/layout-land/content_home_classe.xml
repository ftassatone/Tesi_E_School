<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".docente.HomeClasse"
    tools:showIn="@layout/app_bar_home_classe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elencoClasse"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textInfo"
                android:text="@string/infoElenco"/>
            <ListView
                android:id="@+id/listViewElencoAlunni"
                android:layout_marginTop="@dimen/marginetop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/marginetop">
            </ListView>

        </LinearLayout>
        <View
            android:layout_width="2dip"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginLeft="@dimen/marginetop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/programma"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/minimoMarginetop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textInfo"
                android:text="@string/infoProgramma"/>
            <ListView
                android:id="@+id/listViewProgramma"
                android:layout_marginTop="@dimen/marginetop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
