<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearMenuHmDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- inseriamo la lista di icone come menÃ¹ -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/diagnostica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteDiagnostica"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:background="#FFFFFF"
            android:textSize="@dimen/textSizeTitolo"
            android:textAllCaps="false"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/materie"
                android:textColor="@color/coloreTesto"
                android:textSize="@dimen/textSizeTitolo"/>

            <RadioGroup
                android:id="@+id/groupRadioMaterie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- lista delle materie insegnate dal docente -->

            </RadioGroup>

        </LinearLayout>

        <!-- sezione per "ultime lezioni" -->

    </LinearLayout>
</LinearLayout>