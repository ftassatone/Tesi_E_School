<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eschool.e_school" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PreLogin"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:parentActivityName=".PreLogin"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Registrazione"
            android:parentActivityName=".Login"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".HomeClasse"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SchedaAlunno"
            android:screenOrientation="landscape"
            android:parentActivityName=".HomeClasse">
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Registro"
            android:label="@string/registro"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".HomeAlunno"
            android:label="@string/home"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".HomeMateria"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>